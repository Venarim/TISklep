@model TISklep.Models.Movie

<table>
    <tr>
        <td>
            <h1>@Model.Category.Name</h1>
            @await Component.InvokeAsync("FilmyKategorii", new { nazwaKategorii = Model.Category.Name })
        </td>
        <td>
            <ul>
                <li>Tytuł: @Model.Title</li>
                <li>Reżyser: @Model.Director</li>
                <li>Opis: @Model.Description</li>
                <li>Cena: @Model.Price zł</li>
                <li>Data produkcji: @Model.ProductionDate</li>
            </ul>
        </td>
    </tr>
</table>
