@model IEnumerable<TISklep.Models.Category>
@{
}

<header class="menu-bar">
    <div id="menu">
        @foreach (var kategoria in Model)
        {
            <a href="@Url.Action("ListaFilmow", "Films", new { nazwaKategorii = kategoria.Name })" class="menu-link"> @kategoria.Name </a>
        }
        <a href="@Url.Action("WszystkieFilmy", "Films")" class="menu-link">Wszystkie</a>
        <a href="@Url.Action("Index", "Koszyk")">&#128717; (<span id="cartQuantity">@ViewBag.quantity</span>)</a>
        <a href="@Url.Action("Zarejestruj", "Account")" class="menu-link">Rejestracja</a>
        @if (!User.Identity.IsAuthenticated)
        {
            <a href="@Url.Action("Zaloguj", "Account")" class="menu-link">Logowanie</a>
        }
        else
        {
            <a href="@Url.Action("Wyloguj", "Account")" class="menu-link">@User.Identity.Name, Wyloguj</a>
        }



        @using (Html.BeginForm("Szukaj", "Films"))
        {
            <div class="input-group">
                <div class="form-outline">
                    <input type="search" class="form-control" name="fraza" />
                </div>
                <button class="btn btn-primary" type="submit">Szukaj</button>
            </div>
        }


    </div>
</header>
